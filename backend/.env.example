# Example environment variables for backend
# Copy this file to .env and fill values before running the server

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/waraqadb

# Server
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# JWT (required in production)
JWT_SECRET=dev-jwt-secret
REFRESH_TOKEN_SECRET=dev-refresh-token-secret

# If running behind nginx in production
TRUST_PROXY=1

# Token expiry (optional)
JWT_EXPIRES_IN=7d
JWT_EXPIRE=7d

# Cloudinary - sign up at https://cloudinary.com and add these values
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email (recommended)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=no-reply@waraqa.local

# Optional currency providers
FIXER_API_KEY=
CURRENCYAPI_KEY=

# Optional: library signed download links
LIBRARY_DOWNLOAD_SECRET=

# Optional: limit for in-memory uploads (bytes)
MAX_FILE_SIZE=8388608
