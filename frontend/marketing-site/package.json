{
  "name": "marketing-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('.next', { recursive: true, force: true })\"",
    "predev": "npm run clean",
    "prebuild": "node -e \"require('fs').mkdirSync('.next/server/pages', { recursive: true }); require('fs').writeFileSync('.next/server/pages/500.js', '', 'utf8')\"",
    "dev": "next dev -H 0.0.0.0 -p 4000",
    "build": "cross-env NEXT_FONT_GOOGLE_MOCKED=1 NEXT_DISABLE_FONT_DOWNLOADS=1 next build",
    "start": "next start -H 0.0.0.0 -p 4000",
    "lint": "next lint --max-warnings=1000"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.460.0",
    "next": "15.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-quill": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "20.11.30",
    "@types/react": "18.3.3",
    "autoprefixer": "10.4.19",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.0",
    "postcss": "8.4.38",
    "tailwindcss": "3.4.4",
    "typescript": "5.4.5"
  }
}
