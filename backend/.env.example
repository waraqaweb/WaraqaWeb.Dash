# Example environment variables for backend
# Copy this file to .env and fill values before running the server

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/online-class-manager

# Server
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Cloudinary - sign up at https://cloudinary.com and add these values
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional: limit for in-memory uploads (bytes)
MAX_FILE_SIZE=8388608
